<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.reuben.feature_weather.ui.WeatherFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/toSavedLocations"
            app:destination="@id/savedLocationsFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/savedLocationsFragment"
        android:name="com.reuben.feature_locations.SavedLocationsFragment"
        android:label="SavedLocationsFragment"
        tools:layout="@layout/fragment_saved_locations" />
</navigation>